@model ManagmentSystem.Presentation.Models.AccountVM.LoginVM

@{
    ViewData["Title"] = "Giriş Yap";
}

<h1>Login</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Mail</label>
                <input asp-for="Email" class="form-control" placeholder="Write your E-mail" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password</label>
                <div class="input-group">
                    <input asp-for="Password" class="form-control" id="password" placeholder="Write your Password" />
                    <div class="input-group-append">
                        <span class="input-group-text" onclick="togglePassword()">
                            <i id="eyeIcon" class="fa fa-eye"></i>
                        </span>
                    </div>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>            
            <div class="form-group" style="margin-top: 10px">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div style="margin-top: 5px;">
    <a asp-controller="Home"  asp-action="Index" style="background-color: red; color: white; border: none; padding: 10px 15px; text-decoration: none; border-radius: 4px; display: inline-block;" class="btn">Back to Home</a>
</div>
