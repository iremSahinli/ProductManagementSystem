@model ManagmentSystem.Presentation.Models.AccountVM.ForgotPasswordVM
<form asp-action="ResetPassword" method="post">
    <input type="hidden" asp-for="Token" />
    <input type="hidden" asp-for="Email" />
    <label for="password">Yeni Şifre:</label>
    <input type="password" id="password" asp-for="Password" required />
    <label for="confirmPassword">Yeni Şifreyi Doğrula:</label>
    <input type="password" id="confirmPassword" asp-for="ConfirmPassword" required />
    <button type="submit">Şifreyi Sıfırla</button>
</form>

