@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> Localizer

<br />
<br />
<h1 class="text-center">@Localizer["Welcome User Page"]</h1>

<div class="container my-5">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="custom-panel">
                <h3 class="text-center">@Localizer["Hello User!"]</h3>
                <h3 class="text-center">@Localizer["Welcome to the app."]</h3>
                <p class="text-center custom-paragraph">@Localizer["We have compiled a few questions and answers regarding the application for you, you can find them below."]</p>
                <p class="text-center" style="color:#2dce89 ">@Localizer["We kindly request you to read it!"]</p>
                <div class="accordion custom-accordion" id="accordionRental">
                    <div class="accordion-item mb-3">
                        <h5 class="accordion-header" id="headingOne">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                                @Localizer["What's in the App Interface?"]
                                <i class="collapse-close fa fa-plus text-xs pt-1 position-absolute end-0 me-3"></i>
                                <i class="collapse-open fa fa-minus text-xs pt-1 position-absolute end-0 me-3"></i>
                            </button>
                        </h5>
                        <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionRental">
                            <div class="accordion-body text-dark custom-body">
                                @Localizer["For now, you can view the products page and update your profile information specifically for users in the application interface."]
                                <br />
                                @Localizer["The application continues to be developed and we are working to offer new features to users, please do not forget to follow us!"]
                            </div>
                        </div>
                        <div class="accordion-item mb-3">
                            <h5 class="accordion-header" id="headingTwo">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                    @Localizer["Can I make a product purchase?"]
                                    <i class="collapse-close fa fa-plus text-xs pt-1 position-absolute end-0 me-3"></i>
                                    <i class="collapse-open fa fa-minus text-xs pt-1 position-absolute end-0 me-3"></i>
                                </button>
                            </h5>
                            <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionRental">
                                <div class="accordion-body text-dark custom-body">
                                    @Localizer["You can view products and get price information, but you cannot make a purchase at this time. We will activate payment transactions for you soon."]

                                </div>
                            </div>
                        </div>
                        <div class="accordion-item mb-3">
                            <h5 class="accordion-header" id="headingFifth">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseTwo">
                                    @Localizer["How Can I Reach the Authorized Person (Admin) on the Site?"]
                                    <i class="collapse-close fa fa-plus text-xs pt-1 position-absolute end-0 me-3"></i>
                                    <i class="collapse-open fa fa-minus text-xs pt-1 position-absolute end-0 me-3"></i>
                                </button>
                            </h5>
                            <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionRental">
                                <div class="accordion-body text-dark custom-body">
                                    @Localizer["If you experience any problems with your account information, you can reach us at the e-mail address below."] <a href="#"></a>
                                    <br />
                                    <strong>mertgdc@gmail.com</strong>
                                    <br />
                                    @Localizer["We will contact you as soon as possible!"]

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






<style>
    .container {
        margin-top: 40px;
        margin-bottom: 40px;
    }

    /* Panel (Card) Stili */
    .custom-panel {
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        padding: 30px;
    }

    /* Başlık ve Paragraf Stilleri */
    .custom-heading {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 15px;
        color: #333333;
    }

    .custom-paragraph {
        font-size: 1.1rem;
        margin-bottom: 30px;
        color: #172b4d;
    }

    /* Accordion Stili */
    .custom-accordion .accordion-button {
        font-weight: bold;
        background-color: #f8f9fa;
        color: #000000;
    }

        .custom-accordion .accordion-button:focus {
            box-shadow: none;
        }

    .custom-accordion .accordion-body {
        background-color: #ffffff;
        color: #444444;
        border-top: 1px solid #eaeaea;
        padding: 20px;
    }

    /* Accordion item hover ve aktif durum */
    .custom-accordion .accordion-button:not(.collapsed) {
        background-color: #e9ecef;
        color: #000000;
    }

        .custom-accordion .accordion-button:not(.collapsed)::after {
            transform: rotate(90deg);
        }


    .accordion-button i {
        font-size: 14px;
    }

    .accordion-button .collapse-open {
        display: none;
    }

    .accordion-button:not(.collapsed) .collapse-open {
        display: inline;
    }

    .accordion-button:not(.collapsed) .collapse-close {
        display: none;
    }
</style>


