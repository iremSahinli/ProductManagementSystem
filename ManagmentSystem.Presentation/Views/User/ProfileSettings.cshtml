@model ManagmentSystem.Business.DTOs.UserProfileDTOs.UserProfileDTO

@{
    ViewData["Title"] = Localizer["Profile Details"];
}
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> Localizer

<div class="container text-center">
    <h2>@Localizer["Profile Details"]</h2>

    <div class="card profile-card mx-auto">
        <div class="card-body">
            <div class="profile-header">
                <div class="image-container mx-auto">

                    @if (!string.IsNullOrEmpty(Model.ProfileImage))
                    {
                        <img src="@Url.Content($"~/uploads/{Model.ProfileImage}")" alt="Profile Photo" class="profile-photo" />
                    }
                    else
                    {
                        <img src="/uploads/Not Image.jpg" alt="Profile Photo" class="profile-photo" />
                    }
                </div>
                <h4 class="card-title">@Model.FirstName @Model.LastName</h4>
                <h6 class="category text-info text-gradient">@Localizer["User"]</h6>
            </div>
            <dl class="row">
                <dt class="col-sm-4">@Localizer["Phone Number"]:</dt>
                <dd class="col-sm-8">@Model.PhoneNumber</dd>

                <dt class="col-sm-4">@Localizer["Date of Birth"]:</dt>
                <dd class="col-sm-8">@Model.DateOfBirth?.ToString("dd/MM/yyyy")</dd>
                <dt class="col-sm-4">@Localizer["Mail"]:</dt>
                <dd class="col-sm-8">@Model.Mail</dd>
                <dt class="col-sm-4">@Localizer["Address"]:</dt>
                <dd class="col-sm-8">@Model.Address</dd>
            </dl>
            <a asp-action="Update" class="btn btn-primary">@Localizer["Go Update Page"]</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .container {
        max-width: 100%;
        padding: 0 15px;
    }

    .profile-card {
        background-color: rgba(255, 255, 255, 1); /* Transparan arka plan */
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        padding: 20px;
        margin-top: 20px;
        max-width: 600px;
    }

    .profile-header {
        text-align: center;
        margin-bottom: 50px;
    }



    .card-description {
        margin: 20px 0;
        font-style: italic;
    }

    .btn {
        display: inline-block;
        margin-top: 20px;
    }

    .image-container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 200px;
        height: 200px;
        border-radius: 50%;
        overflow: hidden;
        margin-bottom: 30px;
        border: 2px solid #ddd; /* Çerçeve ekliyoruz */
    }

    .profile-photo {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
</style>

