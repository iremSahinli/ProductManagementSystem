@model ManagmentSystem.Presentation.Areas.Admin.Models.CategoryVMs.AdminCategoryCreateVM

@{
    ViewData["Title"] = "Oluştur";
}

<h1 class="text-center mt-4 mb-0">Create Category</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card profile-card mx-auto">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="CategoryName" class="control-label">Category Name</label>
                        <input asp-for="CategoryName" type="text" class="form-control transparent-border-input" id="exampleFormControlInput1" placeholder="Category Name" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="control-label">Description</label>
                        <textarea asp-for="Description" class="form-control transparent-border-input" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-center mt-4">
                        <button type="submit" class="btn btn-success btn-lg mx-2">Create</button>
                        <a asp-action="Index" class="btn btn-danger mx-2">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .profile-card {
        background-color: rgba(255, 255, 255, 1.0); /* Hafif transparan arka plan */
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        padding: 20px;
        margin-top: 20px;
        max-width: 600px;
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            margin-bottom: 5px;
        }

        .form-group input,
        .form-group textarea {
            margin-bottom: 5px;
        }

    .transparent-border-input {
        background-color: rgba(255, 255, 255, 0.9); /* Beyaz arka plan, hafif saydam */
        border: 1px solid rgba(0, 0, 0, 0.1); /* Hafif gri kenarlık */
        color: #000; /* Yazı rengi */
        padding: 10px;
        border-radius: 8px;
        transition: border-color 0.3s ease-in-out, background-color 0.3s ease-in-out;
    }

        .transparent-border-input:focus {
            border-color: rgba(0, 123, 255, 0.9); /* Odaklandığında daha belirgin çerçeve */
            background-color: rgba(255, 255, 255, 0.5); /* Focus olduğunda arka plan biraz daha dolu */
            outline: none; /* Tarayıcı varsayılan outline'ını kaldırır */
        }

    .btn {
        margin-top: 10px;
    }

    .btn-success {
        background-color: #28a745; /* Yeşil buton arka planı */
        border-color: #28a745; /* Yeşil buton kenarlığı */
        color: white; /* Yazı rengi beyaz */
        padding: 10px 20px;
        border-radius: 8px;
        border: none; /* Kenarlık yok */
    }

    .btn-danger {
        background-color: #dc3545; /* Kırmızı buton arka planı */
        border-color: #dc3545; /* Kırmızı buton kenarlığı */
        color: white; /* Yazı rengi beyaz */
        padding: 10px 20px;
        border-radius: 8px;
        border: none; /* Kenarlık yok */
        text-decoration: none; /* Alt çizgi yok */
    }

    .d-flex {
        display: flex;
    }

    .justify-content-center {
        justify-content: center;
    }

    .mx-2 {
        margin-left: 0.5rem;
        margin-right: 0.5rem;
    }
</style>
