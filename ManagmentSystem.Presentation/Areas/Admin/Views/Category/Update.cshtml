@model ManagmentSystem.Presentation.Areas.Admin.Models.CategoryVMs.AdminCategoryUpdateVM

@{
    ViewData["Title"] = "Update";
}
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> Localizer

<hr />
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card profile-card mx-auto">
            <div class="card-body">
                <h2 class="text-center">@Localizer["Update Category"]</h2>

                <form asp-action="Update">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="CategoryName" class="control-label">@Localizer["Category Name"]</label>
                        <input asp-for="CategoryName" type="text" class="form-control transparent-border-input" placeholder="Category Name" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="control-label">@Localizer["Description"]</label>
                        <textarea asp-for="Description" class="form-control transparent-border-input" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <!-- Eğer alt kategori ise ana kategori seçimi için dropdown -->
                    @if (Model.ParentCategoryId != null)
                    {
                        <div class="form-group">
                            <label asp-for="ParentCategoryId" class="control-label">@Localizer["Parent Category"]</label>

                            @if (ViewBag.Categories != null)
                            {
                                <select asp-for="ParentCategoryId" class="form-control" asp-items="ViewBag.Categories">
                                    <option value="">Ana Kategori Seç</option>
                                </select>
                            }
                            else
                            {
                                <p>@Localizer["No categories available."]</p> <!-- Eğer kategori yoksa kullanıcıya bir mesaj göster -->
                            }

                            <span asp-validation-for="ParentCategoryId" class="text-danger"></span>
                        </div>
                    }


                    <div class="d-flex justify-content-center mt-4 gap-2">
                        <div class="mt-3">
                            <button type="submit" class="btn btn-success btn-lg">@Localizer["Update"]</button>
                        </div>
                        <div class="mt-3">
                            <a href="@Url.Action("Index", "Category", new { id = Model.Id })" class="btn btn-danger btn-lg">@Localizer["Back"]</a>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


<style>
    .profile-card {
        background-color: rgba(255, 255, 255, 1.0);
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        padding: 20px;
        margin-top: 20px;
        max-width: 600px;
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            margin-bottom: 5px;
        }

        .form-group input,
        .form-group textarea {
            margin-bottom: 5px;
        }

    .transparent-border-input {
        background-color: rgba(255, 255, 255, 0.9);
        border: 1px solid rgba(0, 0, 0, 0.1);
        color: #000;
        padding: 10px;
        border-radius: 8px;
        transition: border-color 0.3s ease-in-out, background-color 0.3s ease-in-out;
    }

        .transparent-border-input:focus {
            border-color: rgba(0, 123, 255, 0.9);
            background-color: rgba(255, 255, 255, 1);
            outline: none;
        }

    .btn {
        margin-top: 10px;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        border: none;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        border: none;
        text-decoration: none;
    }

    .d-flex {
        display: flex;
    }

    .justify-content-center {
        justify-content: center;
    }

    .mx-2 {
        margin-left: 0.5rem;
        margin-right: 0.5rem;
    }
</style>
