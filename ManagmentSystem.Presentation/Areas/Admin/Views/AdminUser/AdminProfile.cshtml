@model ManagmentSystem.Presentation.Areas.Admin.Models.UserVMs.AdminProfileVM

@{
    ViewData["Title"] = "AdminProfile";
}
<h1 class="text-center">Admin Profile</h1>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card profile-card mx-auto">
                <div class="card-body text-center">
                    <p class="card-description">
                        <h6 class="card-title">
                            <strong>FullName:</strong>  @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)
                        </h6>
                        <h6 class="category text-info">Admin</h6>
                        <h6>
                            <strong>Email:</strong> @Html.DisplayFor(model => model.Email)
                        </h6>
                        <div class="mt-3">
                            <a href="@Url.Action("Index", "Home", new { id = Model.Id })" class="btn btn-danger btn-lg">Back</a>
                        </div>
                    </p>
                </div>
            </div>

        </div>
    </div>
</div>



