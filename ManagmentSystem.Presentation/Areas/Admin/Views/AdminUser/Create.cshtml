@model ManagmentSystem.Presentation.Areas.Admin.Models.UserVMs.AdminUserCreateVM

@{
    ViewData["Title"] = "Create";
}
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> Localizer

<div class="container text-center">

    <hr />
    <div class="card profile-card mx-auto">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h2 class="text-center">@Localizer["Create New User"]"</h2>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label">@Localizer["First Name"]</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LastName" class="control-label">@Localizer["Last Name"]</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Mail" class="control-label">@Localizer["E-Mail"]</label>
                    <input asp-for="Mail" class="form-control" />
                    <span asp-validation-for="Mail" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label">@Localizer["Phone Number"]</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="DateOfBirth" class="control-label">@Localizer["Date of Birth"]</label>
                    <input asp-for="DateOfBirth" class="form-control" type="date" id="DateOfBirth" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address" class="control-label">@Localizer["Address"]</label>
                    <textarea asp-for="Address" class="form-control"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ProfileImage" class="control-label">@Localizer["Profile Image"]</label>
                    <input asp-for="ProfileImage" class="form-control" type="file" />
                    <span asp-validation-for="ProfileImage" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center mt-4">
                    <input type="submit" value="Create" class="btn btn-success mx-2" />
                    <a asp-action="ListUsers" class="btn btn-danger mx-2">@Localizer["Back to List"]</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .container {
        max-width: 100%;
        padding: 0 15px;
    }

    .profile-card {
        background-color: rgba(255, 255, 255); /* Transparan arka plan */
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        padding: 20px;
        margin-top: 20px;
        max-width: 600px;
    }

    .form-group {
        margin-bottom: 15px;
        display: flex;
        flex-direction: column;
        align-items: flex-start; /* Başlıkları sola hizala */
    }

        .form-group label {
            margin-bottom: 5px;
        }

        .form-group input,
        .form-group textarea {
            margin-bottom: 5px;
        }

    .btn {
        margin-top: 10px;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: white;
        padding: 10px 15px;
        text-decoration: none;
        border-radius: 4px;
    }

    .d-flex {
        display: flex;
    }

    .justify-content-center {
        justify-content: center;
    }

    .mx-2 {
        margin-left: 0.5rem;
        margin-right: 0.5rem;
    }
</style>
