@model ManagmentSystem.Presentation.Areas.Admin.Models.UserVMs.AdminUserCreateVM

@{
    ViewData["Title"] = "Create";
}
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> Localizer

<br />
<div class="container text-center">
    <div class="card profile-card mx-auto">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h3 class="text-center">@Localizer["Create New User"]</h3>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label">@Localizer["First Name"]</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LastName" class="control-label">@Localizer["Last Name"]</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Mail" class="control-label">@Localizer["E-Mail"]</label>
                    <input asp-for="Mail" class="form-control" />
                    <span asp-validation-for="Mail" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label">@Localizer["Phone Number"]</label>
                    <input asp-for="PhoneNumber" class="form-control" maxlength="10" pattern="0[0-9]{9}" title="Telefon numarası 10 haneli ve başında 0 olmayacak şekilde girilmelidir." placeholder="--- --- -- --" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="DateOfBirth" class="control-label">@Localizer["Date of Birth"]</label>
                    <input asp-for="DateOfBirth" class="form-control" type="date" id="DateOfBirth" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address" class="control-label">@Localizer["Address"]</label>
                    <textarea asp-for="Address" class="form-control"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ProfileImage" class="control-label">@Localizer["Profile Image"]</label>
                    <input asp-for="ProfileImage" class="form-control" type="file" />
                    <span asp-validation-for="ProfileImage" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center mt-4">
                    <input type="submit" value=@Localizer["Create"] class="btn btn-success mx-2" />
                    <a asp-action="ListUsers" class="btn btn-danger mx-2">@Localizer["Back to List"]</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .container {
        max-width: 600px;
        margin: 0 auto;
    }

    .profile-card {
        background-color: rgba(255, 255, 255);
        padding: 5px;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 500px;
    }

    .form-group {
        text-align: left;
        margin-bottom: -0.3rem;
    }

    .btn {
        min-width: 100px; /* Butonların minimum genişliği */
        height: 40px; /* Butonların sabit yüksekliği */
        margin: 5px; /* Butonlar arasındaki boşluk */
        
    }

</style>
