@model ManagmentSystem.Presentation.Areas.Admin.Models.UserVMs.AdminUserEditVM

@{
    ViewData["Title"] = "Edit";
}
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> Localizer

<div class="container text-center">
    <hr />
    <div class="card profile-card mx-auto">
        <div class="card-body">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h2 class="text-center">@Localizer["Update User Profile"]</h2>
                <div class="image-container mx-auto">
                    <!-- Görsel kapsayıcıya ortalama ekledik -->
                    @if (!string.IsNullOrEmpty(Model.ProfileImage))
                    {
                        <img src="@Url.Content($"~/uploads/{Model.ProfileImage}")" alt="Profile Photo" class="profile-photo" />
                    }
                    else
                    {
                        <img src="/uploads/Not Image.jpg" alt="Profile Photo" class="profile-photo" />
                    }
                </div>

                <div class="form-group">
                    <label asp-for="FirstName" class="control-label">@Localizer["First Name"]</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LastName" class="control-label">@Localizer["Last Name"]</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Mail" class="control-label">@Localizer["E-Mail"]</label>
                    <input asp-for="Mail" class="form-control" />
                    <span asp-validation-for="Mail" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label">@Localizer["Phone Number"]</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DateOfBirth" class="control-label">@Localizer["Date of Birth"]</label>
                    <input asp-for="DateOfBirth" class="form-control" type="date" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address" class="control-label">@Localizer["Address"]</label>
                    <textarea asp-for="Address" class="form-control"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ProfileImagePath" class="control-label">@Localizer["Profile Image"]</label>
                    <input asp-for="ProfileImagePath" class="form-control" type="file" />
                    <span asp-validation-for="ProfileImagePath" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center mt-4">
                    <input type="submit" value="Save" class="btn btn-primary mx-2" />
                    <a asp-action="ListUsers" class="btn btn-danger mx-2">@Localizer["Back to List"]</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .container {
        max-width: 100%;
        padding: 0 15px;
    }

    .profile-card {
        background-color: rgba(255, 255, 255); /* Transparan arka plan */
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        padding: 20px;
        margin-top: 20px;
        max-width: 600px;
    }

    .form-group {
        margin-bottom: 15px;
        display: flex;
        flex-direction: column;
        align-items: flex-start; /* Başlıkları sola hizala */
    }

        .form-group label {
            margin-bottom: 5px;
        }

        .form-group input,
        .form-group textarea {
            margin-bottom: 5px;
        }

    .btn {
        margin-top: 10px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: white;
        padding: 10px 15px;
        text-decoration: none;
        border-radius: 4px;
    }

    .d-flex {
        display: flex;
    }

    .justify-content-center {
        justify-content: center;
    }

    .mx-2 {
        margin-left: 0.5rem;
        margin-right: 0.5rem;
    }

    .image-container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 200px;
        height: 200px;
        border-radius: 50%;
        overflow: hidden;
        margin-bottom: 30px;
        border: 2px solid #ddd; /* Çerçeve ekliyoruz */
    }

    .profile-photo {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
</style>


