@model ManagmentSystem.Presentation.Areas.Admin.Models.UserVMs.AdminUserEditVM

@{
    ViewData["Title"] = "Edit";
}
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> Localizer

<br />
<div class="container text-center">

    <div class="card profile">
        <div class="card-body">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h3 class="text-center">@Localizer["Update User Profile"]</h3>
                <div class="image-container mx-auto">
                    @if (!string.IsNullOrEmpty(Model.ProfileImage))
                    {
                        <img src="@Url.Content($"~/uploads/{Model.ProfileImage}")" alt="Profile Photo" class="profile-photo" />
                    }
                    else
                    {
                        <img src="/uploads/Not Image.jpg" alt="Profile Photo" class="profile-photo" />
                    }
                </div>

                <div class="form-group">
                    <label asp-for="FirstName" class="control-label">@Localizer["First Name"]</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LastName" class="control-label">@Localizer["Last Name"]</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Mail" class="control-label">@Localizer["E-Mail"]</label>
                    <input asp-for="Mail" class="form-control" />
                    <span asp-validation-for="Mail" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label">@Localizer["Phone Number"]</label>
                    <input asp-for="PhoneNumber" class="form-control" maxlength="10" pattern="0[0-9]{9}" title="Telefon numarası 10 haneli ve başında 0 olmayacak şekilde girilmelidir." placeholder="--- --- -- --" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DateOfBirth" class="control-label">@Localizer["Date of Birth"]</label>
                    <input asp-for="DateOfBirth" class="form-control" type="date" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address" class="control-label">@Localizer["Address"]</label>
                    <textarea asp-for="Address" class="form-control"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ProfileImagePath" class="control-label">@Localizer["Profile Image"]</label>
                    <input asp-for="ProfileImagePath" class="form-control" type="file" />
                    <span asp-validation-for="ProfileImagePath" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center mt-4">
                    <input type="submit" value="@Localizer["Save"]" class="btn btn-success mx-2" />
                    <a asp-action="ListUsers" class="btn btn-danger mx-2">@Localizer["Back to List"]</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .container {
        max-width: 600px;
        margin: 0 auto;

    }
    
    .profile-card {
        background-color: rgba(255, 255, 255);
        padding: 5px;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        max-height: 500px;
        
    }

    .form-group {
        text-align: left;
        margin-bottom: -0.3rem;
    }



    .image-container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 150px;
        height: 150px;
        border-radius: 50%;
        overflow: hidden;
        margin-bottom: 5px;
        border: 1px solid #ddd; /* Çerçeve ekliyoruz */
    }

    .profile-photo {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .btn {
        min-width: 100px; /* Butonların minimum genişliği */
        height: 40px; /* Butonların sabit yüksekliği */
        margin: 5px; /* Butonlar arasındaki boşluk */
        
    }

</style>
