@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> Localizer
<br />
<br />

<h1 class="text-center">@Localizer["Welcome Admin Page"]</h1>

<div class="container my-5">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="custom-panel">
                <h3 class="text-center">@Localizer["Hello Admin!"]</h3>
                <h3 class="text-center">@Localizer["Welcome to the product management system."]</h3>
                <p class="text-center custom-paragraph">@Localizer["We have compiled the following information for you on how to use the application. We recommend that you read it before you start using it!"]</p>
                <div class="accordion custom-accordion" id="accordionRental">
                    <div class="accordion-item mb-3">
                        <h5 class="accordion-header" id="headingOne">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                                @Localizer["What are the Application Interface and Features?"]
                                <i class="collapse-close fa fa-plus text-xs pt-1 position-absolute end-0 me-3"></i>
                                <i class="collapse-open fa fa-minus text-xs pt-1 position-absolute end-0 me-3"></i>
                            </button>
                        </h5>
                        <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionRental">
                            <div class="accordion-body text-dark custom-body">
                                @Localizer["This application that you are authorized for is a product - category, user management system. It is quite simple, easy to manage and you can easily access all areas in the system with the menu on the left. Product and category management is very simple. You can easily switch to product and category tables from the menu on the left in the same way. You can add, update, delete operations for product and category tables in seconds with the help of buttons and see the details of the product."]
                                <br>
                                @Localizer["You can perform basic user operations on the user panel, update the user when necessary, and view detailed information about the user using the button on the table."]
                                <br>
                                @Localizer["The interface is user-friendly and simple, the application is still under development and no product sales are currently made. Different features will continue to be added to the system with updates."]
                            </div>
                        </div>
                        <div class="accordion-item mb-3">
                            <h5 class="accordion-header" id="headingTwo">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                    @Localizer["What should I do for product management?"]
                                    <i class="collapse-close fa fa-plus text-xs pt-1 position-absolute end-0 me-3"></i>
                                    <i class="collapse-open fa fa-minus text-xs pt-1 position-absolute end-0 me-3"></i>
                                </button>
                            </h5>
                            <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionRental">
                                <div class="accordion-body text-dark custom-body">
                                    <strong>@Localizer["When Adding a New Product:"]</strong> @Localizer["Enter product names and descriptions carefully, making sure they match the categories correctly. Also, adding an image of the product makes it easier to recognize."]
                                    <br>
                                    <strong>@Localizer["Product Images:"]</strong> @Localizer["Using high-quality and accurate product images increases the user experience and makes products more eye-catching. You should pay attention to this issue so that the right product reaches the right customer."]
                                    <br>
                                    <strong>@Localizer["Right Category, right product!:"]</strong> @Localizer["Make sure you match your products to the right categories. Always listing products under the right category will help users find the products they are looking for more easily."]

                                </div>
                            </div>
                        </div>
                        <div class="accordion-item mb-3">
                            <h5 class="accordion-header" id="headingFifth">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFifth" aria-expanded="false" aria-controls="collapseFifth">
                                    @Localizer["How Do I Manage Users?"]
                                    <i class="collapse-close fa fa-plus text-xs pt-1 position-absolute end-0 me-3"></i>
                                    <i class="collapse-open fa fa-minus text-xs pt-1 position-absolute end-0 me-3"></i>
                                </button>
                            </h5>
                            <div id="collapseFifth" class="accordion-collapse collapse" aria-labelledby="headingFifth" data-bs-parent="#accordionRental">
                                <div class="accordion-body text-dark custom-body">
                                    <strong>@Localizer["User Activity Monitoring:"]</strong> @Localizer["You can see the full list of registered users in the system in the users section of the admin panel. You will see users who have not completed the registration process in red as Registration Incomplete. In such long-term cases, you can delete the user from the system or block the user from entering the system using switches on the same table. We still recommend that you try not to abuse this situation!"]
                                    <p style="color:red">@Localizer["Remember, you have control over the application!"]</p>
                                    <strong>@Localizer["Adding a New User:"]</strong> @Localizer["You can create a new account from the user table. This account is a user account, a random password is generated by the system for the mail account you registered while creating it and this password is sent to the mail address. The user can immediately log in to the system with this password and it becomes active."]
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






<style>
    .container {
        margin-top: 40px;
        margin-bottom: 40px;
    }

    /* Panel (Card) Stili */
    .custom-panel {
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        padding: 30px;
    }

    /* Başlık ve Paragraf Stilleri */
    .custom-heading {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 15px;
        color: #333333;
    }

    .custom-paragraph {
        font-size: 1.1rem;
        margin-bottom: 30px;
        color: #172b4d;
    }

    /* Accordion Stili */
    .custom-accordion .accordion-button {
        font-weight: bold;
        background-color: #f8f9fa;
        color: #000000;
    }

        .custom-accordion .accordion-button:focus {
            box-shadow: none;
        }

    .custom-accordion .accordion-body {
        background-color: #ffffff;
        color: #444444;
        border-top: 1px solid #eaeaea;
        padding: 20px;
    }

    /* Accordion item hover ve aktif durum */
    .custom-accordion .accordion-button:not(.collapsed) {
        background-color: #e9ecef;
        color: #000000;
    }

        .custom-accordion .accordion-button:not(.collapsed)::after {
            transform: rotate(90deg);
        }


    .accordion-button i {
        font-size: 14px;
    }

    .accordion-button .collapse-open {
        display: none;
    }

    .accordion-button:not(.collapsed) .collapse-open {
        display: inline;
    }

    .accordion-button:not(.collapsed) .collapse-close {
        display: none;
    }
</style>