@model ManagmentSystem.Presentation.Areas.Admin.Models.ProductVMs.AdminProductDetailVM

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card text-center" style="background: rgba(255, 255, 255, 0.9); border-radius: 15px;">
                <h2 class="text-center">Product Details</h2>
                <!-- Görsel -->

                <div class="form-group text-center">
                    <label for="ProductImage" class="control-label">Product Image</label>
                    <div class="image-container">
                        @if (!string.IsNullOrEmpty(Model.ProductImage))
                        {
                            <img src="@Model.ProductImage" alt="Product Image" class="img-fluid" />
                        }
                    </div>
                </div>

                <!-- Diğer Bilgiler -->
                <div class="card-body">
                    <h4 class="card-title">@Html.DisplayFor(model => model.ProductName)</h4>
                    <h6 class="text-info">Product Details</h6>

                    <p>
                        <strong>Price:</strong> @if (Model.ProductPrice != null)

                        {
                            @Model.ProductPrice.ToString("C2", System.Globalization.CultureInfo.GetCultureInfo("tr-TR"))
                        }

                        else

                        {
                            <span>No price available</span>
                        }
                    </p>

                    @* <p><strong>Description:</strong> @Html.DisplayFor(model => model.ProductDescription)</p> *@

                    <p>
                        <strong>Categories:</strong> @if (Model.CategoryNames != null && Model.CategoryNames.Any())

                        {
                            @string.Join(" - ", Model.CategoryNames)
                        }

                        else

                        {
                            <span>No categories assigned</span>
                        }
                    </p>
                </div>
            <div class="mt-3">
                <a href="@Url.Action("Index", "Product")" class="btn btn-danger btn-lg">Back</a>
            </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        background-color: #f8f9fa /* Beyaz arka plan biraz şeffaf */
        border-radius: 15px; /* Oval köşeler */
        
    }

    .card-header img {
        border-radius: 15px 15px 0 0; /* Görselin üst köşelerini oval yap */
        max-height: 150px;
        max-width: 150px;
        object-fit: cover;
        width: auto;
    }

    .card-body {
        padding: 1.5rem; /* Daha iyi iç boşluk */
    }

    .btn-twitter {
        background-color: #00aced; /* Twitter mavi rengi */
        color: #ffffff; /* Beyaz yazı rengi */
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        text-decoration: none;
    }

        .btn-twitter:hover {
            background-color: #0084b4; /* Twitter mavi rengi üzerine gelince */
        }

    .card-description {
        margin: 0;
        font-size: 1rem;
        color: #6c757d; /* Açık gri renk */
    }

    .image-container img {
        width: 200px; /* Genişliği 300px olarak ayarla */
        height: 200px; /* Yüksekliği 200px olarak ayarla */
        object-fit: cover; /* Görseli kapsayıcıya uygun şekilde kes (opsiyonel) */
    }

    .img-fluid {
        max-width: 50%; /* Resmin genişliğini sınırlayarak uyumlu hale getir */
        height: auto; /* Yüksekliği orantılı olarak ayarla */
    }
</style>