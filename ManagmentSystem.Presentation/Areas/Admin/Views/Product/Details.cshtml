        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductDescription)
        </dd>
        <dt class="col-sm-2">
            Category Name
        </dt>
        <dd class="col-sm-10">
            @if (Model.CategoryNames != null && Model.CategoryNames.Any())
            {
                @string.Join(" - ", Model.CategoryNames)
            }
            else
            {
                <span>No categories</span>
            }
        </dd>
    </dl>
</div>
