@model ManagmentSystem.Presentation.Areas.Admin.Models.ProductVMs.AdminProductDetailVM

@{
    ViewData["Title"] = "Product Details";
}
<h1 class="text-center">Product Detail</h1>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card text-center" style="background: rgba(255, 255, 255, 0.9); border-radius: 15px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
                <!-- Görsel -->
                <div class="card-header" style="padding: 0; border-radius: 15px 15px 0 0;">
                    @if (!string.IsNullOrEmpty(Model.ProductImage))

                    {
                        <img src="@Model.ProductImage" alt="Product Image" class="img-fluid" style="border-radius: 15px 15px 0 0; max-height: 150px; max-width: 150px; object-fit: cover; width: auto;" />
                    }

                    else

                    {
                        <p>No image available</p>
                    }
                </div>

                <!-- Diğer Bilgiler -->
                <div class="card-body">
                    <h4 class="card-title">@Html.DisplayFor(model => model.ProductName)</h4>
                    <h6 class="text-info">Product Details</h6>

                    <p>
                        <strong>Price:</strong> @if (Model.ProductPrice != null)

                        {
                            @Model.ProductPrice.ToString("C2", System.Globalization.CultureInfo.GetCultureInfo("tr-TR"))
                        }

                        else

                        {
                            <span>No price available</span>
                        }
                    </p>

                    <p><strong>Description:</strong> @Html.DisplayFor(model => model.ProductDescription)</p>

                    <p>
                        <strong>Categories:</strong> @if (Model.CategoryNames != null && Model.CategoryNames.Any())

                        {
                            @string.Join(" - ", Model.CategoryNames)
                        }

                        else

                        {
                            <span>No categories assigned</span>
                        }
                    </p>
                </div>
            </div>
            <div class="text-center mt-4">
                <a class="btn btn-danger" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        background-color: rgba(255, 255, 255, 0.9); /* Beyaz arka plan biraz şeffaf */
        border-radius: 15px; /* Oval köşeler */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Hafif gölge */
    }

    .card-header img {
        border-radius: 15px 15px 0 0; /* Görselin üst köşelerini oval yap */
        max-height: 150px;
        max-width: 150px;
        object-fit: cover;
        width: auto;
    }

    .card-body {
        padding: 1.5rem; /* Daha iyi iç boşluk */
    }

    .btn-twitter {
        background-color: #00aced; /* Twitter mavi rengi */
        color: #ffffff; /* Beyaz yazı rengi */
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        text-decoration: none;
    }

        .btn-twitter:hover {
            background-color: #0084b4; /* Twitter mavi rengi üzerine gelince */
        }

    .card-description {
        margin: 0;
        font-size: 1rem;
        color: #6c757d; /* Açık gri renk */
    }
</style>