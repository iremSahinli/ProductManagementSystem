@model ManagmentSystem.Presentation.Areas.Admin.Models.ProductVMs.AdminProductCreateVM

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Create New Product</h1>

<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card card-custom">
                <div class="card-body">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Ürün adı -->
                        <div class="form-group">
                            <label asp-for="ProductName" class="control-label">Product Name</label>
                            <input asp-for="ProductName" class="form-control" />
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>

                        <!-- Ürün fiyatı -->
                        <div class="form-group">
                            <label asp-for="ProductPrice" class="control-label">Product Price</label>
                            <div class="input-group">
                                <input asp-for="ProductPrice" class="form-control" />
                                <div class="input-group-append">
                                    <span class="input-group-text">₺</span>  <!-- TL simgesi -->
                                </div>
                            </div>
                            <span asp-validation-for="ProductPrice" class="text-danger"></span>
                        </div>

                        <!-- Ürün açıklaması -->
                        <div class="form-group">
                            <label asp-for="ProductDescription" class="control-label">Product Description</label>
                            <textarea asp-for="ProductDescription" class="form-control"></textarea>
                            <span asp-validation-for="ProductDescription" class="text-danger"></span>
                        </div>

                        <!-- Ürün resmi yükleme -->
                        <div class="form-group">
                            <label asp-for="ProductImage" class="control-label">Product Image</label>
                            <input asp-for="ProductImage" class="form-control" type="file" />
                            <span asp-validation-for="ProductImage" class="text-danger"></span>
                        </div>

                        <!-- Kategoriler seçimi -->
                        <div class="form-group">
                            <label asp-for="SelectedCategories" class="control-label">Select Categories</label>
                            <select asp-for="SelectedCategories" class="form-control" multiple="multiple" id="categorySelect">
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.Id">@category.CategoryName</option>
                                }
                            </select>
                            <span asp-validation-for="SelectedCategories" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-center mt-4 gap-2">
                            <input type="submit" value="Save" class="btn btn-success" />
                            <a asp-action="Index" class="btn btn-danger">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Select2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet" />

    <!-- Select2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#categorySelect').select2({
                placeholder: "Select categories",
                allowClear: true,
                width: '100%',
                minimumInputLength: 0
            });
        });
    </script>
}

<style>
    .card-custom {
        max-width: 800px; /* Kartın genişliğini sınırlayarak boyutunu küçült */
        margin: 0 auto; /* Kartı ortala */
        padding: 20px; /* Kartın iç boşluklarını ayarla */
    }

    .form-group {
        margin-bottom: 1rem; /* Form gruplarına alt boşluk ekle */
    }

    .form-control {
        margin-bottom: 10px; /* Form elemanlarına alt boşluk ekle */
    }

    .btn-success {
        background-color: #28a745; /* Yeşil buton arka planı */
        border-color: #28a745; /* Yeşil buton kenarlığı */
        color: white; /* Yazı rengi beyaz */
        padding: 10px 20px;
        border-radius: 8px;
        border: none; /* Kenarlık yok */
    }

    .btn-danger {
        background-color: #dc3545; /* Kırmızı buton arka planı */
        border-color: #dc3545; /* Kırmızı buton kenarlığı */
        color: white; /* Yazı rengi beyaz */
        padding: 10px 20px;
        border-radius: 8px;
        border: none; /* Kenarlık yok */
        text-decoration: none; /* Alt çizgi yok */
    }

    .text-center {
        text-align: center; /* Metni ortala */
    }

    .d-flex {
        display: flex; /* Flexbox düzeni */
    }

    .justify-content-center {
        justify-content: center; /* Ortalamak için */
    }

    .mt-4 {
        margin-top: 1.5rem; /* Üst boşluk */
    }

    .gap-2 {
        gap: 0.5rem; /* Boşluklar arası mesafe */
    }

    .btn {
        margin-top: 10px; /* Buton üst boşluğu */
    }
</style>
