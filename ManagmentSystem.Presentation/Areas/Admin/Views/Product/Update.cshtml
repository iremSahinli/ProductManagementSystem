@model ManagmentSystem.Presentation.Areas.Admin.Models.ProductVMs.AdminProductUpdateVM

@{
    ViewData["Title"] = "Update";
}

<h1 class="text-center">Update Product</h1>

<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Kartın genişliğini sınırlamak için genişliği 6 olarak ayarladık -->
            <div class="card card-custom">
                <div class="card-body">
                    <form asp-action="Update" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <!-- Ürün resmi bölümü -->
                        <div class="form-group text-center">
                            <label for="ProductImage" class="control-label">Product Image</label>
                            <div class="image-container">
                                @if (!string.IsNullOrEmpty(Model.ProductImagePath))
                                {
                                    <img src="@Model.ProductImagePath" alt="Product Image" class="img-fluid" />
                                }
                            </div>
                        </div>

                        <!-- Diğer form alanları -->
                        <div class="form-group">
                            <label asp-for="ProductName" class="control-label">Product Name</label>
                            <input asp-for="ProductName" class="form-control" />
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProductPrice" class="control-label">Product Price</label>
                            <div class="input-group">
                                <input asp-for="ProductPrice" class="form-control" />
                                <div class="input-group-append">
                                    <span class="input-group-text">?</span> <!-- TL simgesi -->
                                </div>
                            </div>
                            <span asp-validation-for="ProductPrice" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProductDescription" class="control-label">Product Description</label>
                            <textarea asp-for="ProductDescription" class="form-control"></textarea>
                            <span asp-validation-for="ProductDescription" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <!-- ProductImagePath'i formda gizli alan olarak gönderiyoruz -->
                            <input type="hidden" asp-for="ProductImagePath" />
                            <label asp-for="ProductImage" class="control-label">Upload New Image</label>
                            <input asp-for="ProductImage" type="file" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="SelectedCategories" class="control-label">Select Categories</label>
                            <select asp-for="SelectedCategories" class="form-control" multiple="multiple" id="categorySelect">
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.Id">@category.CategoryName</option>
                                }
                            </select>
                            <span asp-validation-for="SelectedCategories" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-center mt-4 gap-2">
                            <input type="submit" value="Save" class="btn btn-success" />
                            <a asp-action="Index" class="btn btn-danger">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Select2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet" />

    <!-- Select2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#categorySelect').select2({
                placeholder: "Select categories",
                allowClear: true,
                width: '100%',
                minimumInputLength: 0
            });
        });
    </script>
}

<style>
    .card-custom {
        max-width: 800px; /* Kartın genişliğini sınırlayarak boyutunu küçült */
        margin: 0 auto; /* Kartı ortala */
        padding: 20px; /* Kartın iç boşluklarını ayarla */
    }

    .card-header {
        background-color: #f8f9fa; /* Başlık arka plan rengini ayarla */
    }

    .card-body {
        padding: 20px; /* İç boşlukları ayarla */
    }

    .form-group {
        margin-bottom: 1rem; /* Form gruplarına alt boşluk ekle */
    }

    .form-control {
        margin-bottom: 10px; /* Form elemanlarına alt boşluk ekle */
    }

    .btn-primary {
        margin-top: 10px; /* Gönder butonuna üst boşluk ekle */
    }

    .text-center {
        text-align: center; /* Metni ortala */
    }

    .image-container {
        margin: 0 auto; /* Resim kapsayıcısını ortala */
    }

    .img-fluid {
        max-width: 50%; /* Resmin genişliğini sınırlayarak uyumlu hale getir */
        height: auto; /* Yüksekliği orantılı olarak ayarla */
    }
</style>
