@model ManagmentSystem.Presentation.Areas.Admin.Models.ProductVMs.AdminProductUpdateVM

@{
    ViewData["Title"] = "Update";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewData["Title"] - Update</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        /* Tablonun köşelerini oval yapmak için */
        .table {
            border-radius: 15px; /* Oval köşeler */
            overflow: hidden; /* Taşmaları gizler */
        }

        .card {
            border-radius: 15px; /* Kartın köşelerini oval yap */
        }

        /* Başlık hücreleri için */
        thead th {
            background-color: #f8f9fa;
        }

        .card-header h6 {
            font-size: 1.5rem; /* Yazı boyutunu artır */
            font-weight: bold; /* Yazıyı kalın yap */
        }
    </style>
</head>

<body>
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card mb-4">
                    <div class="card-header pb-0">
                        <h6>Update Product</h6>
                    </div>
                    <div class="card-body px-0 pt-0 pb-2">
                        <div class="table-responsive p-0">
                            <form asp-action="Update" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Id" />
                                <div class="form-group">
                                    <label asp-for="ProductName" class="control-label">Product Name</label>
                                    <input asp-for="ProductName" class="form-control" />
                                    <span asp-validation-for="ProductName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ProductPrice" class="control-label">Product Price</label>
                                    <div class="input-group">
                                        <input asp-for="ProductPrice" class="form-control" />
                                        <div class="input-group-append">
                                            <span class="input-group-text">₺</span> <!-- TL simgesi -->
                                        </div>
                                    </div>
                                    <span asp-validation-for="ProductPrice" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ProductDescription" class="control-label">Product Description</label>
                                    <textarea asp-for="ProductDescription" class="form-control"></textarea>
                                    <span asp-validation-for="ProductDescription" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label for="ProductImage">Product Image</label>
                                    @if (!string.IsNullOrEmpty(Model.ProductImagePath))
                                    {
                                        <div>
                                            <img src="@Model.ProductImagePath" alt="Product Image" style="width:200px; height:auto;" />
                                        </div>
                                    }
                                    <input type="hidden" asp-for="ProductImagePath" />
                                    <div class="form-group">
                                        <label asp-for="ProductImage"></label>
                                        <input asp-for="ProductImage" type="file" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="SelectedCategories" class="control-label">Select Categories</label>
                                    <select asp-for="SelectedCategories" class="form-control" multiple="multiple" id="categorySelect">
                                        @foreach (var category in Model.Categories)
                                        {
                                            <option value="@category.Id">@category.CategoryName</option>
                                        }
                                    </select>
                                    <span asp-validation-for="SelectedCategories" class="text-danger"></span>
                                </div>

                                <div class="form-group" style="margin-top: 10px">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>


                                <div style="margin-top: 5px;">
                                    <a asp-action="Index" style="background-color: red; color: white; border: none; padding: 10px 15px; text-decoration: none; border-radius: 4px; display: inline-block;" class="btn">Back to List</a>
                                </div>



                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }

        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet" />
        <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
        <script>
            $(document).ready(function () {
                $('#categorySelect').select2({
                    placeholder: "Select categories",
                    allowClear: true,
                    width: '100%',
                    minimumInputLength: 0
                });
            });
        </script>
    }
</body>
</html>