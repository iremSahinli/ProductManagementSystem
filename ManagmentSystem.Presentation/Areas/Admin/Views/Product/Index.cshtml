@model IEnumerable<ManagmentSystem.Presentation.Areas.Admin.Models.ProductVMs.AdminProductListVM>

@{
    ViewData["Title"] = "Product List";
}
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> Localizer


<br />
<br />
<br />


<div class="card">
    <h2 class="product-heading">@Localizer["Products"]</h2>
    
        
    
    <div class="table-responsive">
        <div class="button-container">
            <a asp-action="Create" class="btn btn-success create-button">@Localizer["Create New Product"]</a>
        </div>
        <table class="table align-items-center mb-0">
            <thead>
                <tr>
                    <th class="text-secondary text-xxs font-weight-bolder opacity-7 ps-2">@Localizer["PRODUCT IMAGE"]</th>
                    <th class="text-secondary text-xxs font-weight-bolder opacity-7 ps-2">@Localizer["PRODUCT NAME_"]</th>
                    <th class="text-secondary text-xxs font-weight-bolder opacity-7 ps-2">@Localizer["PRICE_"]</th>
                    <th class="text-secondary text-xxs font-weight-bolder opacity-7 ps-2">@Localizer["CATEGORIES_"]</th>
                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">@Localizer["ACTIONS"]</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="image-container">
                                <div class="d-flex px-2 py-1">
                                    <div class="d-flex flex-column justify-content-center">
                                        @if (!string.IsNullOrEmpty(item.ProductImage))
                                        {
                                            <img src="@item.ProductImage" alt="Product Image" class="product-image" />
                                        }
                                        else
                                        {
                                            <span>No Image</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="d-flex flex-column justify-content-center">
                                <div class="tooltip-container">
                                    <h6 class="mb-0 text-xs">
                                        @Html.DisplayFor(modelItem => item.ProductName)
                                    </h6>
                                    <div class="tooltip-text">
                                        <strong style="color:black">Description: </strong>@Html.DisplayFor(modelItem => item.ProductDescription)
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="d-flex flex-column justify-content-center">
                                @if (item.ProductPrice != null)
                                {
                                    <span class="text-xs text-secondary mb-0">@item.ProductPrice.ToString("C2", System.Globalization.CultureInfo.GetCultureInfo("tr-TR"))</span>
                                }
                                else
                                {
                                    <span class="text-xs text-secondary mb-0">No price available</span>
                                }
                            </div>
                        </td>
                        <td>
                            <div class="d-flex flex-column justify-content-center">
                                @if (!string.IsNullOrEmpty(item.CategoryNames))
                                {
                                    <span class="text-xs text-secondary">@item.CategoryNames</span>
                                }
                                else
                                {
                                    <span class="text-xs text-secondary mb-0">No categories</span>
                                }
                            </div>
                        </td>
                       

                            
                        <td class="align-middle text-center">
                            <div class="button-group">
                                <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary btn-sm">@Localizer["Update"]</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">@Localizer["Details"]</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">@Localizer["Delete"]</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>


    .card {
        display: grid;
        max-width: 1400px; /* Kartın genişliğini kısalt */
        margin: auto; /* Kartı ortala */
        
    }


    .button-group {
        display: flex; /* Butonları yan yana dizmek için */
        justify-content: center; /* Butonları merkezde hizalar */
        flex-wrap: wrap; /* Ekran küçüldüğünde butonların alt satıra geçmesini sağlar */
        gap: 5px; /* Butonlar arasında boşluk bırakır */
    }

        .button-group .btn {
            min-width: 80px; /* Butonların minimum genişliği */
            white-space: nowrap; /* Buton metninin satıra sığması için */
        }
           

    
    /* Görselin büyüme efekti */
    .product-image {
        object-fit: cover;
        object-position: center; /* Görseli kutu içinde ortala */
        border-radius: 8px;
        height: 100px;
        width: 100px;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out; /* Animasyon süresi */
        z-index: 1;
        position: relative;
    }


        .product-image:hover {
            transform: scale(3); /* Görselin büyüklüğü %300 olacak şekilde büyüt */
            box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.3); /* Hafif bir gölge ekle */
            transform-origin: left; /* Görsel merkezden büyüsün */
            position: absolute;
            z-index: 20; /* Tablo üzerine çıkmasını sağla */
            margin-right: 100px;
        }

    .tooltip-container {
        position: relative;
        display: inline-block;
    }

        .tooltip-container .tooltip-text {
            visibility: hidden;
            width: auto; /* Tooltip genişliğini ihtiyaca göre ayarlayabilirsiniz */
            background-color: white; /* Tooltip arka plan rengi*/
            color: black; /* Tooltip metin rengini siyah yapıyoruz */
            text-align: center;
            border: 1px solid #ddd; /* Tooltip etrafında hafif bir sınır */
            border-radius: 4px;
            padding: 10px;
            position: absolute;
            z-index: 1;
            bottom: -70px; /* Tooltip’in yatay ortasında konumlanmasını sağlar */
            left: 10px; /* Tooltip’in ürünün hemen yanında çıkmasını sağlar */
            transform: translateY(-50%); /* Tooltip’in yatay olarak ortalanmasını sağlar */
            margin-left: 5px; /* Tooltip ile ürün arasındaki boşluk */
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .tooltip-container:hover .tooltip-text {
            visibility: visible;
            opacity: 1;
        }


    .product-heading {
        margin-right: auto;
    }

    .image-container {
        width: 100px; /* Görselin orijinal genişliği */
        height: 100px; /* Görselin orijinal yüksekliği */
        overflow: hidden; /* Büyüyen görselin kapsayıcıyı aşmasını engeller */
    }
















    

</style>

