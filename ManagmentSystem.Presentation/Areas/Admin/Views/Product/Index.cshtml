@model IEnumerable<ManagmentSystem.Presentation.Areas.Admin.Models.ProductVMs.AdminProductListVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Product List</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Product</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Price
            </th>
            <th>
                Description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                <td>
                    @if (item.ProductPrice != null)
                    {
                        <span>@item.ProductPrice.ToString("C2", System.Globalization.CultureInfo.GetCultureInfo("tr-TR"))</span>
                    }
                    else
                    {
                        <span>No price available</span>
                    }
                </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.ProductDescription)
                    </td>
                    <td>
                        <!-- Güncelle butonu -->
                        <form asp-action="Update" method="get" style="display:inline;">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-primary">Update</button>
                        </form>

                        <!-- Detaylar butonu -->
                        <form asp-action="Details" method="get" style="display:inline;">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-info">Details</button>
                        </form>

                        <!-- Sil butonu -->
                        <form asp-action="Delete" method="post" style="display:inline;" onsubmit="return confirm('Bu ürünü silmek istediğinize emin misiniz?');">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
        }
    </tbody>
</table>
